autoLight=$(grep "menu;" /etc/profile > /dev/null && echo -e "\033[1;32m♦ ")
_ons=$(ps -x | grep sshd | grep -v root | grep -v ubuntu | grep -v ec2-user | grep priv | wc -l)
_online=$(printf '%-5s' "$_ons")
clear
echo -e "\033[0;34m◇──────────────────────────────────────────────────────────────◇\033[0m"
