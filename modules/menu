    var01='\033[1;37m•'
} || {
    echo -e "  \033[1;33m[\033[1;31m*\033[1;33m]  \033[1;32m New version of this script is available!  \033[1;33m[\033[1;31m*\033[1;33m]\033[0m"
    var01="\033[1;32m!"
